#:kivy 1.10.1
#:import sm kivy.uix.screenmanager
#:include screen_classes/welcome.kv
#:include screen_classes/agreement.kv
#:include screen_classes/socioling.kv
#:include screen_classes/training.kv
#:include screen_classes/actual_experiment.kv

ScreenManager:
    id: screen_manager
    transition: sm.NoTransition()

    WelcomeScreen:
        id: welcome_screen
        name: "WelcomeScreen"
        manager: screen_manager

    DataScreen:
        name: "DataScreen"
        manager: screen_manager
        text: welcome_screen.text

    StartScreen:
        name: "StartScreen"
        manager: screen_manager

    AgreementScreen:
        id: agreement_screen
        name: "AgreementScreen"
        manager: screen_manager

    SocioLingScreen:
        name: "SocioLingScreen"
        manager: screen_manager
        email: agreement_screen.email
        type: welcome_screen.type

    TrainingScreen:
        name: "TrainingScreen"
        manager: screen_manager
        type: welcome_screen.type

    ExperimentScreen:
        name: "ExperimentScreen"
        manager: screen_manager
        type: welcome_screen.type

    EndScreen:
        name: "EndScreen"
        manager: screen_manager


<DataScreen>:
    BoxLayout:
        orientation: "vertical"

        ColoredLabel:
            text: "Please check file contents before pressing continue"

        RstDocument:
            text: root.text

        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 60

            Button:
                font_size: 25
                text: "Go back"
                on_press: root.manager.current = "WelcomeScreen"
                background_color: (1, 0, 0, 1)

            Button:
                font_size: 25
                text: "Continue"
                on_press: root.manager.current = "StartScreen"
                background_color: (0, 1, 0, 1)

<StartScreen>:
    BoxLayout:
        orientation: "vertical"

        Label:
            color: 0, 0, 0, 1
            text: "Press start to begin experiment"
            font_size: 50

        Button:
            size_hint_y: None
            height: 100
            text: "Start"
            font_size: 50
            on_press: root.manager.current = "AgreementScreen"
            background_color: (0, 1, 0, 1)

<EndScreen>:
    BoxLayout:
        orientation: "vertical"

        Label:
            color: 0, 0, 0, 1
            text: "You reached the end! Congrats!"
            font_size: 50