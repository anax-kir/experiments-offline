<TrainingScreen>:
    id: training

    BoxLayout:
        id: sentence_box
        orientation: "vertical"

        ColoredLabel:
            text: "Please rate the correctness of the following sentence on a scale from 1 (ungrammatical) to 5 (perfectly grammatical)"
            text_size: self.width, None
            font_size: 25
            size_hint: 1, None
            height: self.texture_size[1] + 15
            halign: "center"

        GridLayout:
            cols: 5
            row_force_default: True
            row_default_height: 40

            ToggleButton:
                background_color: 0.608, 0.608, 0.627, 0.5
                text: "1"
                group: "score"
                on_press: root.record_active_state(self.state, self.text)

            ToggleButton:
                background_color: 0.608, 0.608, 0.627, 0.5
                text: "2"
                group: "score"
                on_press: root.record_active_state(self.state, self.text)

            ToggleButton:
                background_color: 0.608, 0.608, 0.627, 0.5
                text: "3"
                group: "score"
                on_press: root.record_active_state(self.state, self.text)

            ToggleButton:
                background_color: 0.608, 0.608, 0.627, 0.5
                text: "4"
                group: "score"
                on_press: root.record_active_state(self.state, self.text)

            ToggleButton:
                background_color: 0.608, 0.608, 0.627, 0.5
                text: "5"
                group: "score"
                on_press: root.record_active_state(self.state, self.text)

        Button:
            size_hint_y: None
            text: "Continue"
            height: 40
            font_size: 25
            background_color: (0.608, 0.608, 0.627, 0.5)
            on_press: root.record_result()


    BoxLayout:
        id: instruction_box
        orientation: "vertical"
        canvas.before:
            Color:
                rgba: (1, 1, 1, 1)
            Rectangle:
                pos: self.pos
                size: self.size
        Widget:
        Label:
            color: 0, 0, 0, 1
            text: training.instructions
            font_size: 30
            text_size: self.width, None
            size_hint: 1, None
            height: self.texture_size[1]
            halign: "center"

        Widget:
        Button:
            size_hint_y: None
            height: 100
            text: "Continue"
            font_size: 50
            background_color: (0, 1, 0, 1)
            on_press:
                training.remove_widgets(["instruction_box"])
                training.display_sentence()

